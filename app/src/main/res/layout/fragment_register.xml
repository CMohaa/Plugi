<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="8dp"
                android:minWidth="220dp"
                android:layout_gravity="center"

                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#24A8E3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_twitter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:text="@string/signup_with_twitter"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/viewFaceBook"
                android:layout_marginTop="8dp"
                android:minWidth="220dp"
                android:layout_gravity="center"
                android:gravity="start|center_vertical"
                android:background="#3B5896"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <com.facebook.login.widget.LoginButton
                    android:id="@+id/login_button"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    style="@style/FacebookLoginButton"


                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/viewGoogle"
                android:layout_marginTop="8dp"
                android:minWidth="220dp"
                android:layout_gravity="center"

                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:background="#DB4E3F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_google"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:text="@string/sign_up_with_google"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/grey"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="OR"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/grey"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <EditText
                android:inputType="textPersonName"
                android:id="@+id/etFirstName"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/edittext"
                android:hint="@string/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="16dp"
                android:inputType="textPersonName"
                android:id="@+id/etLastName"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/edittext"
                android:hint="@string/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:layout_marginTop="16dp"
                android:inputType="textEmailAddress"
                android:id="@+id/etEmail"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/edittext"
                android:hint="@string/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:layout_marginTop="16dp"
                android:inputType="phone"
                android:id="@+id/etPhone"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/edittext"
                android:hint="@string/telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etpasswordPanel"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textinputlayout"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/show_password_selector"
                app:hintEnabled="false"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">
                <EditText
                    android:cursorVisible="true"
                    android:textCursorDrawable="@drawable/pojocurser"
                    android:id="@+id/etPassword"
                    android:inputType="textPassword"
                    style="@style/edittext"
                    android:hint="@string/Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etrepasswordPanel"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textinputlayout"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/show_password_selector"
                app:hintEnabled="false"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorIconDrawable="@null">
                <EditText
                    android:cursorVisible="true"
                    android:textCursorDrawable="@drawable/pojocurser"
                    android:id="@+id/etRePassword"
                    android:inputType="textPassword"
                    style="@style/edittext"
                    android:hint="@string/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>



                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/cbTerms"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView

                        android:textColor="@color/black"
                        android:text="@string/i_agree_to_the_terms_conditions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="2dp"
                        android:id="@+id/viewTerms"
                        android:textColor="@color/blue"
                        android:text="@string/terms_conditions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            <Button
                android:id="@+id/btnRegister"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/btn"
                android:text="@string/sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.facebook.login.widget.LoginButton
                android:id="@+id/btn_fb_login"
                android:layout_width="65dp"
                android:layout_height="66dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>