<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="1dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivClose"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_close_black"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <LinearLayout

            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_discount_code"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>


    </FrameLayout>



    <LinearLayout
        android:layout_margin="16dp"
        android:id="@+id/CurrencyPanel"
        android:layout_below="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draw_box"
        android:padding="2dp">
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/etDiscount"/>
    </LinearLayout>

    <TextView
        android:layout_below="@+id/CurrencyPanel"
        android:id="@+id/TxtٍSubmitWarring"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_enter_discount_code"
        android:textAlignment="center"
        android:textColor="@color/red_900">
    </TextView>
    <Button
        android:layout_below="@+id/TxtٍSubmitWarring"
        android:id="@+id/btnSubmit"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/btn"
        android:text="@string/apply_code"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>